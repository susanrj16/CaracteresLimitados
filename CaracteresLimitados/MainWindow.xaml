<Window x:Class="CaracteresLimitados.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaracteresLimitados"
        mc:Ignorable="d"
        Title="Caracteres limitados" Height="450" Width="800" Icon="128.ico">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFB6359"/>
                <GradientStop Color="#FFFBF5F5" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="cuadroTexBox" HorizontalAlignment="Center" Height="300" TextWrapping="Wrap"  Width="600" MaxLength="140" TextChanged="cuadroTexBox_TextChanged" AcceptsReturn="True"/>
        <TextBlock x:Name="contadorTextBlock" Text="0/140" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="30" FontSize="20" Foreground="#FF989191"/>
    </Grid>
</Window>
